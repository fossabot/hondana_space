.jumbotron
  .container
    .row
      .col-10
      .col-1
        a href="/books/#{@book.isbn}" data-method="patch"
          = fa_icon "refresh"
    .row
      .col-2
      .col-2
        img.book-thumbnail src="#{@book.image_url}"
      .col-6
        h3 = @book.title
        p
          strong Author:
          = @book.author
        p
          strong Publisher:
          = @book.publisher
        p
          strong Category:
          = @book.category
        .row
          .col-6
            a.btn.btn-warning.btn-lg.btn-block href="#{@book.amazon_url}" target="_blank"
              = fa_icon "amazon"
              | Amazon
          .col-6
            - disabled = "disabled" unless @book.kindle_url
            a class="btn btn-secondary btn-lg btn-block #{disabled}" href="#{@book.kindle_url}" target="_blank"
              = fa_icon "amazon"
              | Kindle
